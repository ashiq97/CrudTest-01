@model CRUD_With_CoreMvc_test_01.Models.School


<div class="border container" style="padding:30px">
    <form asp-action="Edit" asp-controller="School" method="post" role="form">
        <input hidden asp-for="SchoolId"/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-md-3">
                <label class="float-left">Name</label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label class="float-left">Location</label>
            </div>
            <div class="col-6">
                <input asp-for="Location" class="form-control" />
                <span class="text-danger" asp-validation-for="Location"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 offset-3">
                <button type="submit" class="btn btn-success form-control">Update</button>
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-dark form-control">Back To List</a>
            </div>
        </div>
    </form>
</div>